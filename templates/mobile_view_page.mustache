{{!
    @template mod_ubicast/mobile_view_page

    This template renders the mobile page.

    Example context (json):
    {
        "endpoint": "Direct url to ubicast resource",
        "launch_activity_mobile": "String for button label"
    }
}}
{{=<% %>=}}
<ion-content>
  <div class="list-item-limited-width">
    <ion-button expand="block" class ion-margin ion-text-wrap md button button-block button-solid ion-activatable ion-focusable hydratedicon-start>
      <a id="ubicast_endpoint" href="<% endpoint %>" style="color: inherit;text-decoration: inherit;">
        <% launch_activity_mobile %>
        <ion-icon name="fas-external-link-alt" slot="end" aria-hidden="true" ng-reflect-name="fas-external-link-alt" src="assets/fonts/font-awesome/solid/external-link-alt.svg" class="faicon md hydrated" role="img"></ion-icon>
      </a>
    </ion-button>
  </div>
</ion-content>
