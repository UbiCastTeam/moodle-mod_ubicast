{{!
  @template mod_ubicast/mobile_view_page

  This template renders the mobile page.

  Example context (json):
  {
      "iframeurl": "url to launch ubicast content",
  }
}}
{{=<% %>=}}
<ion-content [fullscreen]="true">
<ion-row>
  <ion-col>
    <div class="video-container">
      <iframe class="mediaserver-iframe" src="<% iframeurl %>" allow="autoplay; encrypted-media" allowfullscreen="allowfullscreen"></iframe>
    </div>
  </ion-col>
</ion-row>
</ion-content>
